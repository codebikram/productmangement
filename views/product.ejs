<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= title %>
  </title>
  <style>
    body {
      margin: 0;
      padding: 0;
      background-color: #f6f4f4;
      font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }
    .table {
      margin: 10px;
      padding: 10px;
      background-color: #fafeff;
    }

    tr:hover {
      background-color: #efefef;
    }
    .btn_logout{
      margin-top: 10px;
    }
  </style>
</head>

<body>
  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            &times;
          </button>
          <h4 class="modal-title">Modal Header</h4>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <label for="category">select category:</label>
              <select name="category" id="category">
                <%for(var i=0; i< categoryList.length;i++){%>
                  <option value="<%=categoryList[i]._id%>">
                    <%=categoryList[i].name%>
                  </option>
                  <%}%>
              </select>
            </div>
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name" />
            </div>
            <div class="form-group">
              <label for="qty">Quantity:</label>
              <input type="number" class="form-control" id="qty" />
            </div>
            <div class="form-group">
              <label for="price">Price:</label>
              <input type="number" class="form-control" id="price" />
            </div>
            <div class="form-group">
              <label for="discount">Discount:</label>
              <input type="number" class="form-control" id="discount" />
            </div>
            <button type="button" class="btn btn-default btn_add">
              Save
            </button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <button type="button" class="btn btn-info btn_logout pull-right">
      Logout
    </button>
    <h1 class="text-center">Product Section</h1>
    <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#myModal">
      Add Product
    </button>
    <form class="locationform" enctype="multipart/form-data">
    <input style="display: inline" type="file" accept=".csv" class="btn btn-primary locationfile" name="products"
      value="Import CSV" />
    <input type="button" class="btn btn-primary btn_csv_loc" value="Upload" />
  </form>
  </div>
  <div class="container">

    <%if(product && product.length>0){%>
      <table class="table">
        <thead>
          <tr>
            <th>Category</th>
            <th>Name</th>
            <th>Qty</th>
            <th>Price</th>
            <th>Discount</th>
            <th>Actual Price</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i< product.length;i++){%>
            <tr>
              <%if(product[i].categoryId){%>
                <td class="<%= product[i].categoryId._id%>">
                  <%= product[i].categoryId.name%>
                </td>
                <%}else{%>
                  <td class="">NA</td>
                  <%}%>
                    <td class="name">
                      <%= product[i].name%>
                    </td>
                    <td class="qty">
                      <%= product[i].qty%>
                    </td>
                    <td class="price">
                      <%= product[i].price%>
                    </td>
                    <td class="discount">
                      <%= product[i].discount%>
                    </td>
                    <td class="actualprice">
                      <%=product[i].actualPrice%>
                    </td>
                    <td>
                      <button type="button" class="btn btn-success glyphicon glyphicon-edit btn_edit"
                        value="<%=product[i]._id%>"></button>
                    </td>
                    <td>
                      <button type="button" class="btn btn-danger glyphicon glyphicon-trash btn_delete"
                        value="<%=product[i]._id%>"></button>
                    </td>
            </tr>
            <%}%>
        </tbody>
      </table>
      <%}else{%>
        <h3 class="text-center">No product available</h3>
        <%}%>
  </div>
</body>
<script>
  $(document).ready(function () {
    $(document).on("click", ".btn_update", function () {
      var id = $(this).val();
      var name = $(this).closest("tr").find(".txt_name").val();
      var qty = $(this).closest("tr").find(".txt_qty").val();
      var price = $(this).closest("tr").find(".txt_price").val();
      var discount = $(this).closest("tr").find(".txt_discount").val();
      var data = {
        id: id,
        name: name,
        qty: qty,
        price: price,
        discount: discount,
      };
      $.ajax({
        url: "/product-update",
        type: "POST",
        data: data,
        success: function (res) {
          if (res.success) {
            alert(res.success);
            window.location.reload();
          } else if (res.error) {
            alert(res.error);
            window.location.reload();
          }
        },
      });
    });
    $(document).on("click", ".btn_edit", function () {
      var id = $(this).val();
      $(this)
        .removeClass("btn_edit glyphicon-edit")
        .addClass("btn_update")
        .text("Update");
      var name = $(this).closest("tr").find(".name").text().trim();
      $(this)
        .closest("tr")
        .find(".name")
        .html("<input type='text' class='txt_name' value='" + name + "' />");
      var qty = $(this).closest("tr").find(".qty").text().trim();
      $(this)
        .closest("tr")
        .find(".qty")
        .html("<input type='number' class='txt_qty' value='" + qty + "' />");
      var price = $(this).closest("tr").find(".price").text().trim();
      $(this)
        .closest("tr")
        .find(".price")
        .html(
          "<input type='number' class='txt_price' value='" + price + "' />"
        );
      var discount = $(this).closest("tr").find(".discount").text().trim();
      $(this)
        .closest("tr")
        .find(".discount")
        .html(
          "<input type='number' class='txt_discount' value='" +
          discount +
          "' />"
        );
    });
    $(document).on("click", ".btn_delete", function () {
      var check = confirm("Are you sure want to delete this item?");
      if (!check) {
        return;
      }
      var id = $(this).val();
      $.ajax({
        url: "/product-delete",
        type: "POST",
        data: { id: id },
        success: function (res) {
          if (res.success) {
            alert(res.success);
            window.location.reload();
          } else if (res.error) {
            alert(res.error);
            window.location.reload();
          }
        },
      });
    });
    $(document).on("click", ".btn_add", function () {
      var name = $("#name").val();
      var qty = $("#qty").val();
      var price = $("#price").val();
      var discount = $("#discount").val();
      var categoryId = $("#category").val();
      if (!name || !qty || !price || !discount) {
        alert("All field are required");
        return;
      }
      var data = {
        name: name,
        qty: qty,
        price: price,
        discount: discount,
        categoryId: categoryId,
      };
      $.ajax({
        url: "/product-data",
        type: "POST",
        data: data,
        success: function (res) {
          if (res.success) {
            alert(res.success);
            window.location.reload();
          } else if (res.error) {
            alert(res.error);
            window.location.reload();
          }
        },
      });
    });
    $(document).on("click", ".btn_logout", function () {
      window.location.href =
        window.location.pathname.split("/")[0] + "/logout";
    });
    $(document).on("click", ".btn_csv_loc", function () {
      var files = $(this).closest(".locationform").find(".locationfile")[0]
        .files;
      if (files.length > 0) {
        var form = $(this).closest(".locationform")[0];
        var data = new FormData(form);
        console.log(data);
        $.ajax({
          type: "POST",
          enctype: "multipart/form-data",
          data: data,
          url: "/create_location_viaCSV",
          processData: false,
          contentType: false,
          cache: false,
        })
          .done(function (res) {
            if (res.Error) {
              alert(
                "Please Upload Valid CSV File" + JSON.stringify(res.Error)
              );
              console.log(res.Error);
            } else if (res.Success) {
              alert(res);
              window.location.reload();
            }
          })
          .catch(function (err) {
            console.log(err);
          });
      } else {
        alert("file not selected");
      }
    });
  });
</script>

</html>